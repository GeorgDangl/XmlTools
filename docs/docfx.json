{
  "metadata":[
    {
      "src":[
        {
          "src":"../src",
          "files":[
            "XmlTools/*.csproj"
          ],
          "exclude":[
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "dest":"./api",
      "properties":{
        "TargetFramework":"net461"
      }
    }
  ],
  "build":{
    "content":[
      {
        "files":[
          "*.md",
          "**/*.yml"
        ]
      }
    ],
    "resource":[
      {
        "files":[
          "**.png"
        ]
      }
    ],
    "overwrite":"specs/*.md",
    "globalMetadata":{
      "_appTitle":"Api Documentation",
      "_appFooter":"&copy; <a href=\"https://www.dangl-it.com\" target=\"_blank\">Dangl IT - Georg Dangl</a>",
      "_appLogoPath":"app-logo.png",
      "_appFaviconPath":"app-logo.png",
      "_enableSearch":true,
      "_gitUrlPattern": "github"
    },
    "dest":"../output",
    "template": [
      "default",
      "template"
    ]
  }
}
